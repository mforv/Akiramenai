<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="25dp" xmlns:android="http://schemas.android.com/apk/res/android">    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_logo_description"
        android:maxHeight="300dp"
        android:paddingBottom="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/z_app_mascot" />

    <Button
        android:id="@+id/starttutoringbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:ems="20"
        android:minEms="20"
        android:text="@string/tutoringheadline"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/starttestbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:ems="20"
        android:minEms="20"
        android:text="@string/testlbl"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/startsettingsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:ems="20"
        android:minEms="20"
        android:text="@string/settingsheadline"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/startaboutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minEms="20"
        android:text="@string/about_headline"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/hello"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>